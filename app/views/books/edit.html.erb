<h2>Editing</h2>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputName">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"inputName", placeholder:"名前"%>
  <%= f.submit "Update Book" %>
<% end %>