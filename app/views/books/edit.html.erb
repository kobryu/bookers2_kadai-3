
<main>
  <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h2>Editing Book</h2>
         <%= form_with model: @book do |f| %>


            <div class="form-group">
              <br><label for="inputName">Title</label></br>
              <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>

            <div class="form-group">
              <br><label for="inputName">Opinion</label><br>
              <%= f.text_field :body, autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>

            <div class="form-group">
              <%= f.submit "Update Book" %>
            </div>

      <% end %>
      <%= link_to "Show", book_path(@book) %>
       |
      <%= link_to "Back", books_path %>
      </div>


      </div>
      </div>
</main>